<?xml version="1.0" encoding="utf-8"?>
<panels:CrudPanel xmlns:fx="http://ns.adobe.com/mxml/2009" 
				  xmlns:s="library://ns.adobe.com/flex/spark" 
				  xmlns:mx="library://ns.adobe.com/flex/mx" 
				  xmlns:panels="presentation.view.panels.*"
				  xmlns:parsley="http://www.spicefactory.org/parsley"
				  xmlns:code="http://code.google.com/p/flexlib/"
				  xmlns:crud="presentation.view.crud.*"
				  width="440" height="380">
	
	<fx:Script>
		<![CDATA[
			import application.model.products.Product;
			
			import infrastructure.CategoryConfig;
			
			import mx.events.FlexEvent;
			import mx.events.ValidationResultEvent;
			
			import presentation.model.admin.products.CrudCategoryPM;
			
			import spark.events.IndexChangeEvent;
			
			import utils.ComboBoxUtils;
			
			[Bindable]
			public var pModel:CrudCategoryPM;
			
			[Embed("/images/admin/categories-16.png")]
			private static const CATEGORY_SMALL:Class;
			
			override public function injectionComplete(): void {
				super.pm = pModel;
				pModel.validateFunction = validate;
				pModel.setDomainObject(getDomainObject());
			}
			
			// Function to validate data and submit it to the server. 
			private function validate():Boolean {			
				var vResult:ValidationResultEvent;
				
				// Validate the required fields. 
				if (nameValid.validate().type==ValidationResultEvent.INVALID)
					return false;
				if (descriptionValid.validate().type==ValidationResultEvent.INVALID) 
					return false;
				if (productValidator.validate().type==ValidationResultEvent.INVALID) 
					return false;
				
				return true;
			}
			
			private function changeHandler(evt:IndexChangeEvent):void {
				if (ComboBoxUtils.validateSelection(productCombo, Product))
					pModel.category.product = productCombo.selectedItem;
			}
			
			private function valueCommit(evt:FlexEvent):void {
				productCombo.validateNow();
			}
			
			override public function onSaveNewSuccess():void {
				productCombo.selectedIndex = ComboBoxUtils.NON_SELECTED_INDEX;
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<parsley:ContextBuilder config="{CategoryConfig}" />
		
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<parsley:FastInject property="pModel" type="{CrudCategoryPM}" injectionComplete="injectionComplete()" />
		
		<mx:StringValidator id="nameValid" 
							required="true" 
							source="{nameText}" 
							property="text" maxLength="100" />
		
		<mx:StringValidator id="descriptionValid" 
							required="true" 
							source="{descriptionText}" 
							property="text" maxLength="200" />
		
		<mx:NumberValidator id="productValidator"
							source="{productCombo}"
							property="selectedIndex"
							minValue="0"
							lowerThanMinError="@Resource(bundle='admin', key='admin.administrator.categories.crud.product.notselected')"/>
	</fx:Declarations>
	
	<panels:contentPanel>
		<s:Group width="100%" height="100%">
			<panels:CrudTab> 
				<mx:VBox id="infoTab" label="@Resource(bundle='admin', key='admin.administrator.categories.crud.tab.info')" icon="{CATEGORY_SMALL}" >
					<s:BorderContainer borderVisible="false" width="100%" height="100%" backgroundColor="#F4F4F4">
						<panels:FormHeading label="@Resource(bundle='admin', key='admin.administrator.categories.crud.header.info')" />
							
						<s:HGroup width="100%" height="100%"  top="22">
							<s:Form id="categoryForm" width="100%" height="100%" >
								<s:layout>
									<s:FormLayout id="categoryFormLay" paddingLeft="-10" gap="-10" />
								</s:layout>
								
								<crud:FormItem label="@Resource(bundle='admin', key='admin.administrator.categories.crud.name')" required="true">
									<s:TextInput id="nameText" width="150" text="@{pModel.category.name}" height="22" 
												 showErrorTip="true" showErrorSkin="true" />
								</crud:FormItem>
								
								<crud:FormItem label="@Resource(bundle='admin', key='admin.administrator.categories.crud.description')" required="true">
									<s:TextArea id="descriptionText" width="328" text="@{pModel.category.description}" height="66"
												 showErrorTip="true" showErrorSkin="true" />
								</crud:FormItem>	
								
								<crud:FormItem label="@Resource(bundle='admin', key='admin.administrator.categories.crud.product')" required="true">
									<s:ComboBox id="productCombo" 
												prompt="@Resource(bundle='admin', key='admin.administrator.categories.crud.product.selection')" 
												dataProvider="{pModel.products}" width="150" labelField="name"
												selectedIndex="{pModel.productSelectedIndex}"
												change="changeHandler(event)"/>
								</crud:FormItem>
							</s:Form>	
						</s:HGroup>
					</s:BorderContainer>
				</mx:VBox>
			</panels:CrudTab>
			
		</s:Group>
	</panels:contentPanel>
</panels:CrudPanel>
